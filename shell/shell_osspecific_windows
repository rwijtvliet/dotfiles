
# python stuff
alias pf='cd ~/python/portfolyo/ && poetry shell'

# neovim stuff
alias nvconf='cd ~/.config/nvim/lua/ && nvim ~/.config/nvim/lua/ '
alias cdswap='cd ~/.local/state/nvim/swap'
alias rmswap='rm ~/.local/state/nvim/swap/*'

# window manager stuff
alias wm='cd ~/.dotfiles/windowmanager/windows && nvim hotkeys.ahk komorebi.json'
alias shortcuts='echo "opening excel file with windowmanager shortcuts" && start ~/.dotfiles/windowmanager/shortcuts.xlsx'

# ensure symlinks can be created.
export MSYS=winsymlinks:nativestrict 

# espanso folder
export ESPANSO_DIR="$APPDATA/espanso"

# PATH
export PATH="$PATH:/c/msys64/usr/bin/"
export PATH="$PATH:$HOME/.dotfiles/shell/my_scripts/"


lns() {
  # ln -s but for windows
  local target=$1
  local linkname=$2

  if [[ -z "$target" || -z "$linkname" ]]; then
    echo "Create a symlink on windows."
    echo "Usage like on unix: lns <target> <linkname>"
    return 1
  fi

  # Convert Unix-style paths to Windows-style
  win_target=$(cygpath -w "$target")
  win_linkname=$(cygpath -w "$linkname")

  # Use PowerShell to create the symbolic link
  powershell.exe -NoProfile -Command "New-Item -ItemType SymbolicLink -Path '$win_linkname' -Target '$win_target'" > /dev/null 2>&1

  if [[ $? -eq 0 ]]; then
    echo "Symlink created: $linkname -> $target"
  else
    echo "Failed to create symlink. Try running Git Bash as Administrator."
  fi
}
