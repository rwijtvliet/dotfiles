# Aliases and other things that are not operating-system dependent.

# navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

# Eza as ls-replacement.
# . most-common use
alias l='eza -F --group-directories-first --icons=always --color=always'
# . second-most-common use
alias la='eza -alF --group-directories-first --icons=always --color=always'
# . split: non-hidden directories; non-hidden files; hidden files&directories
alias ld='eza -lDF --icons=always --color=always'
alias lf='eza -lfF --icons=always --color=always'
alias lh='eza -ldF .* --group-directories-first --icons=always --color=always'

# Zoxide as cd-replacement.
alias cd=z

# git
alias ga='echo "git add ." && git add .'
alias gc='echo "git commit -m $1" && git commit -m $1'
alias gs='echo "git status" && git status'
alias gp='echo "git push" && git push'
alias gl='echo "git pull" && git pull'
alias gl='echo "git pull" && git pull'

# starting apps
alias myip='curl ipinfo.io/ip'
alias prnm='poetry run nvim main.py'
alias ps='poetry shell'

# keyboard compilation and flashing
alias qm='cd ~/.dotfiles/keyboard/ && nvim qmk/common/keymap_common.c qmk/ergodox_ez_glow/keymap_ergodox.c qmk/keyboardio_atreus/keymap_atreus.c qmk/zsa_voyager/keymap_voyager.c'

alias qmk_ce='qmk_official compile -kb ergodox_ez/glow -km rwijtvliet'
alias qmk_ca='qmk_official compile -kb keyboardio/atreus -km rwijtvliet'
alias qmk_cv='qmk_zsa compile -kb voyager -km rwijtvliet'

alias qmk_fe='qmk_official flash -kb ergodox_ez/glow -km rwijtvliet'
alias qmk_fa='qmk_official flash -kb keyboardio/atreus -km rwijtvliet'
alias qmk_fv='qmk_zsa flash -kb voyager -km rwijtvliet'

alias qmk_e='qmk_ce && qmk_fe'
alias qmk_a='qmk_ca && qmk_fa'
alias qmk_v='qmk_cv && qmk_fv'

# nvim stuff
alias cdswap='cd ~/.local/state/nvim/swap'
alias rmswap='rm ~/.local/state/nvim/swap/*'
alias vim=nvim
alias nvima='NVIM_APPNAME="nvim-astronvim" nvim'
alias nviml='NVIM_APPNAME="nvim-lazyvim" nvim'

# dotfiles
alias dotf='cd ~/.dotfiles'

# showing images
alias icat='wezterm imgcat'

# 
export PATH="$PATH:$HOME/.dotfiles/shell/my_scripts/"
